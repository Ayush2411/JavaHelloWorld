
  pipeline {
  agent any
   stages {
      stage('checkout from develop') {
         steps {
           sh label: '', 
           script: 
           '''
           git pull origin master
           '''
         }
      }
      stage('build') {
         steps {
            echo "scmVars.GIT_COMMIT"
            echo "${scmVars.GIT_COMMIT}"
             // Displaying the variables saving it as environment variable
            env.GIT_COMMIT = scmVars.GIT_COMMIT
            echo "env.GIT_COMMIT"
            echo "${env.GIT_COMMIT}"
         }
      }
   }
}
